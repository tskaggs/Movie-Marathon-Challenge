<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><a href="#">Movie Marathon Challenge</a></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
  </ul>

  <section class="top-bar-section">
    <ul class="right">
        <li class="active"><a href="#" data-reveal-id="myModal" data-reveal><img class="fb_pic" src="//graph.facebook.com/<%= user.two.username %>/picture" /> <%= user.two.name %></a></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
  </section>
</nav>

<div class="row">
    <div data-alert class="alert-box success radius">
      You've successfully logged in.
      <a href="#" class="close">&times;</a>
    </div>
    <div class="small-12 large-12 columns">
    </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <h1>Your scheduled movie times!</h1>
    <ul class="small-block-grid-4">
    <% _.each(user.three, function (movielist) { %>
      <li>
        <div class="panel">
        <p><%= movielist.friend %></p>
        <p><%= movielist.time %></p>
        <p><%= movielist.movie %></p>
        </div>
      </li>
    <% }) %>
    </ul>
  </div>
</div>

<div class="row">
  <form action="/movietime/create" method="POST" class="form-signin">
  <div class="small-12 large-12 columns">
    <h1>Select a friend or many!</h1>
    <ul class="small-block-grid-4 findfriend">
    <% _.each(user.one.data, function (friend) { %>
        <li><img class="th" src="//graph.facebook.com/<%= friend.id %>/picture" /><%= friend.name %>
        <br />
        <input id="checkbox1" type="checkbox" name="friend" value="<%= friend.name %>"><label for="checkbox1">Select</label></li>
      <% }) %>
    </ul>
    <hr />

    <h1>Select how many hours</h1>
    <input type="text" placeholder="5... maybe 12?" name="time" /> Hours
    <hr />

    <h1>Select the movie</h1>
    <div>
      <input type="text" placeholder="Type movie" />
      <a href="javascript:void(0)" class="button postfix searchRotten">Go</a>
    </div>
    <h4>Movie Count: <span class="moviecount"></span></h4>
    <ul class="small-block-grid-4 rottenmovies">

    </ul>

  </div>

  <hr />

  <input type="hidden" name="owner" value="<%= user.two.id %>" />

  <input type="submit" class="small button expand" value="Create Movie Time" />
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  </form>
</div>
